{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "FundooNotes",
        "description": "NodeJS | MongoDB",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "fundoonotes-backend.herokuapp.com",
    "basePath": "/api/",
    "schemes": [
        "https"
    ],
    "paths": {
        "/users/register": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Sign-Up",
                "parameters": [
                    {
                        "name": "firstName",
                        "in": "formData",
                        "type": "string",
                        "required": true,
                        "description": "First name"
                    },
                    {
                        "name": "lastName",
                        "in": "formData",
                        "type": "string",
                        "required": true,
                        "description": "Last name"
                    },
                    {
                        "name": "email",
                        "in": "formData",
                        "type": "string",
                        "required": true,
                        "description": "Email"
                    },
                    {
                        "name": "mobile",
                        "in": "formData",
                        "type": "string",
                        "required": true,
                        "description": "Mobile number"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "type": "string",
                        "required": true,
                        "description": "Password"
                    }
                ],
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            }
        },
        "/users/registerDevice": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Register device for push notification",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication Token"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "required": false,
                        "description": "Device Details",
                        "schema": {
                            "example": {
                                "deviceId":"",
                                "deviceToken":""
                            }
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            }
        },
        "/users/deregisterDevice": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Un-register device from push notification",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication Token"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            }
        },
        "/users/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Sign-In",
                "parameters": [
                    {
                        "name": "email",
                        "in": "formData",
                        "type": "string",
                        "required": true,
                        "description": "Email"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "type": "string",
                        "required": true,
                        "description": "Password"
                    }
                ],
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            }
        },
        "/notes/dashboard": {
            "get": {
                "tags": [
                    "Note"
                ],
                "summary": "Get list of dashboard notes",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication Token"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            }
        },
        "/notes/archive": {
            "get": {
                "tags": [
                    "Note"
                ],
                "summary": "Get list of archive notes",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication Token"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            }
        },
        "/notes/trash": {
            "get": {
                "tags": [
                    "Note"
                ],
                "summary": "Get list of trash/deleted notes",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication Token"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            },
            "delete": {
                "tags": [
                    "Note"
                ],
                "summary": "Delete multiple notes forever",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication Token"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "required": false,
                        "description": "Array of Notes Id",
                        "schema": {
                            "example":[{
                                "_id": "5c1a342eea8c3b0bbb811zf0"
                            }]
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            }
        },
        "/notes/trash/{id}": {
            "delete": {
                "tags": [
                    "Note"
                ],
                "summary": "Delete single note forever",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication Token"
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "type": "string",
                        "required": true,
                        "description": "Note Id"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            }
        },
        "/notes": {
            "get": {
                "tags": [
                    "Note"
                ],
                "summary": "Get list of all notes",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication Token"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            },
            "post": {
                "tags": [
                    "Note"
                ],
                "summary": "Create new note",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication Token"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "required": false,
                        "description": "Note Detail",
                        "schema": {
                            "$ref": "#/definitions/Note"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            },
            "delete": {
                "tags": [
                    "Note"
                ],
                "summary": "Delete Multiple Notes",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication Token"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "required": false,
                        "description": "Array of Notes Id",
                        "schema": {
                            "example":[{
                                "_id": "5c1a342eea8c3b0bbb811zf0"
                            }]
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            }
        },
        "/notes/{id}": {
            "put": {
                "tags": [
                    "Note"
                ],
                "summary": "Update note",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication Token"
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "type": "string",
                        "required": true,
                        "description": "Note Id"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "required": false,
                        "description": "Note Detail",
                        "schema": {
                            "$ref": "#/definitions/Note"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            },
            "delete": {
                "tags": [
                    "Note"
                ],
                "summary": "Delete note",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication Token"
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "type": "string",
                        "required": true,
                        "description": "Note Id"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {}
            }
        }
    },
    "definitions": {
        "Note": {
            "required": [
                "note"
            ],
            "properties": {
                "title": {
                    "type": "string",
                    "example:": "Welcome"
                },
                "note": {
                    "type": "string",
                    "example:": "This is first note"
                },
                "color": {
                    "type": "string",
                    "enum": [
                        "#ffffff",
                        "#fff000"
                    ]
                },
                "isArchive": {
                    "type": "boolean"
                },
                "isPinned": {
                    "type": "boolean"
                },
                "isDeleted": {
                    "type": "boolean"
                },
                "reminderDate": {
                    "type": "string"
                }
            }
        }
    }
}